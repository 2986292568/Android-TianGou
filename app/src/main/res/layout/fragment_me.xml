<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiao91.heiboy.fragment.MeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--标题-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_me_title_h"
            android:background="@color/color_good_bad_comment_skip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/me_title"
                android:textColor="@color/me_title"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:textSize="@dimen/sp_me_title"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true" />

            <ImageView
                android:id="@+id/me_iv_set"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/set"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--登录-->
                <LinearLayout
                    android:id="@+id/ll_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/color_good_bad_comment_skip">

                    <ImageView
                        android:id="@+id/me_iv_login_photo"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginTop="@dimen/dp_10"
                        android:src="@mipmap/ic_launcher"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/me_tv_login_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未登陆"
                        android:textSize="@dimen/sp_me_title"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:textColor="@color/me_title"
                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/dp_60"
                    android:paddingRight="@dimen/dp_60"
                    android:paddingBottom="@dimen/dp_20"
                    android:background="@color/color_good_bad_comment_skip">

                    <TextView
                        android:id="@+id/tv_fensi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="粉丝 0"
                        android:textColor="@color/me_title"
                        android:textSize="@dimen/sp_14"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_guanzhu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="关注 0"
                        android:textColor="@color/me_title"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_jifen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="积分 0"
                        android:textColor="@color/me_title"
                        android:textSize="@dimen/sp_14" />


                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</FrameLayout>
