<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiao91.heiboy.fragment.MeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--标题-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_me_title_h"
            android:background="@color/color_good_bad_comment_skip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/me_title"
                android:textColor="@color/me_title"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:textSize="@dimen/sp_me_title"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true" />

            <ImageView
                android:id="@+id/me_iv_set"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/set"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>
